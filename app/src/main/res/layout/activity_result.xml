<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soojungkim.catdoganalyzer.ResultActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="380dp"
        android:layout_marginTop="26dp"
        app:layout_constraintBottom_toTopOf="@+id/resultText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/catperson" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="331dp"
        android:layout_height="38dp"
        android:layout_marginBottom="59dp"
        android:fontFamily="@font/lilita_one"
        app:layout_constraintBottom_toTopOf="@+id/toAnalyzeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <Button
        android:id="@+id/toAnalyzeBar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="144dp"
        android:layout_height="47dp"
        android:layout_marginBottom="64dp"
        android:onClick="onClick"
        android:text="Show me more!!!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultText" />

</android.support.constraint.ConstraintLayout>
